    "version": "0.2.0",
    "configurations": [
        {
            "type": "firefox",
            "request": "attach",
            "name": "Firefox debug",
            "url": "http://localhost:3000",
            "pathMappings": [
                {
                    "url": "file:///home/jirafa/source/react-c2/react-app/src",
                    "path": "${workspaceFolder}/src"
                }
            ]
        },
        {
            "name": "Launch localhost",
            "type": "firefox",
            "request": "launch",
            "reAttach": true,
            "url": "http://localhost:3000",
            "webRoot": "${workspaceFolder}",
            "pathMappings": [
                {
                    "url": "file:///home/jirafa/source/react-c2/react-app/src",
                    "path": "${workspaceFolder}/src"
                }
            ]
        },
        {
            "name": "SUPER Firefox",
            "type": "firefox",
            "request": "launch",
            "url": "http://localhost:3000",
            "webRoot": "${workspaceFolder}"
        }
    ]
}